---
import ImageMod from "@/components/ImageMod.astro";
import Accordion from "@/functional-components/Accordion";
import Testimonials from "@/functional-components/Testimonials";
import Base from "@/layouts/Base.astro";
import { getListPage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import PageHeader from "@/partials/PageHeader.astro";
import { getCollection } from "astro:content";

const about = await getListPage("about", "-index");
const teamMembers = (await getCollection("team", ({ data }) => !data.draft)).sort(
  (a, b) => (a.data.order ?? 99) - (b.data.order ?? 99),
);
if (about.data.draft) {
  return Astro.redirect("/404");
}

const {
  title,
  meta_title,
  description,
  image,
  about_us,
  faq_section_title,
  button,
  faq_section_subtitle,
  faqs,
  testimonials_section_enable,
  testimonials_section_title,
  testimonials,
} = about.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} />

  <section>
    <div class="container">
      {
        about_us?.map((section, index) => (
          <div class="lg:flex gap-10 mt-16 lg:mt-28 items-center">
            {index % 2 === 0 ? (
              <>
                <ImageMod
                  class="rounded-2xl mx-auto shadow-lg"
                  src={section?.image!}
                  width={536}
                  height={449}
                  alt={section?.title}
                />
                <div class="mt-10 lg:mt-0 space-y-4">
                  <h2 class="text-3xl font-semibold">{section?.title}</h2>
                  <p
                    class="text-text-light dark:text-darkmode-text-light leading-7"
                    set:html={markdownify(section?.content)}
                  />
                </div>
              </>
            ) : (
              <>
                <div class="space-y-4">
                  <h2 class="text-3xl font-semibold">{section.title}</h2>
                  <p
                    class="text-text-light dark:text-darkmode-text-light leading-7"
                    set:html={markdownify(section.content)}
                  />
                </div>
                <ImageMod
                  class="rounded-2xl mx-auto mt-10 lg:mt-0 shadow-lg"
                  src={section.image}
                  width={536}
                  height={449}
                  alt={section.title}
                />
              </>
            )}
          </div>
        ))
      }
    </div>
  </section>

  {
    testimonials_section_enable && (
      <Testimonials
        client:load
        title={testimonials_section_title!}
        testimonials={testimonials!}
      />
    )
  }

  {
    teamMembers.length > 0 && (
      <section class="section bg-light dark:bg-darkmode-light/60">
        <div class="container">
          <div class="text-center mb-10">
            <p class="text-sm uppercase tracking-[0.35em] text-primary/80">Team</p>
            <h2 class="text-3xl font-semibold">チーム紹介</h2>
          </div>

          <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {teamMembers.map((member) => (
              <div class="rounded-2xl border border-border/70 dark:border-border/40 bg-white dark:bg-darkmode-body shadow-sm p-6 text-center">
                <ImageMod
                  src={member.data.image ?? "/images/staff/staff.png"}
                  alt={member.data.name}
                  width={220}
                  height={220}
                  class="mx-auto h-44 w-44 rounded-full object-cover"
                />
                <h3 class="text-xl font-semibold mt-4">{member.data.name}</h3>
                <p class="text-sm text-primary mb-3">{member.data.role}</p>
                <p class="text-sm text-text-light dark:text-darkmode-text-light leading-relaxed">
                  {member.data.bio}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <section>
    <div class="container">
      <div
        class="bg-light px-7 lg:px-32 py-20 dark:bg-darkmode-light mb-14 xl:mb-28 rounded-md"
      >
        <div class="row">
          <div class="md:col-5 mx-auto space-y-5 mb-10 md:mb-0">
            <h1 set:html={markdownify(faq_section_title!)} />
            <p
              set:html={markdownify(faq_section_subtitle!)}
              class="md:text-lg"
            />

            {
              button?.enable && (
                <a
                  class="btn btn-sm md:btn-lg btn-primary font-medium"
                  href={button.link}
                >
                  {button.label}
                </a>
              )
            }
          </div>

          <div class="md:col-7">
            <Accordion client:load faqs={faqs} />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
