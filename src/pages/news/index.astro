---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("news", ({ data }) => !data.draft)).sort(
  (a, b) =>
    new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime(),
);
---

<Base title="News">
  <PageHeader
    title="ニュース"
    description="Im Kartonの最新ニュース、イベント情報、リリースをご案内します。"
  />

  <section class="section">
    <div class="container">
      <div class="grid gap-8 md:grid-cols-2">
        {posts.map((post) => (
          <article class="rounded-2xl border border-border/70 dark:border-border/40 bg-white dark:bg-darkmode-body shadow-sm overflow-hidden">
            <img
              src={post.data.heroImage ?? "/images/og-image.png"}
              alt={post.data.title}
              class="h-48 w-full object-cover"
              loading="lazy"
            />
            <div class="p-6 space-y-3">
              <p class="text-xs uppercase tracking-[0.3em] text-primary/70">
                {new Date(post.data.publishDate).toLocaleDateString("ja-JP")}
              </p>
              <h2 class="text-xl font-semibold leading-snug">
                <a href={`/news/${post.slug}`} class="hover:underline">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-sm text-text-light dark:text-darkmode-text-light leading-relaxed">
                {post.data.excerpt}
              </p>
              <a class="text-sm font-medium text-primary hover:underline" href={`/news/${post.slug}`}>
                詳細を見る
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
