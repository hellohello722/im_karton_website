---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getListPage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import PageHeader from "@/partials/PageHeader.astro";

const contact = await getListPage("contact", "-index");

if (contact.data.draft) {
  return Astro.redirect("/404");
}

const { contact_form_action }: { contact_form_action: string } = config.params;
const { title, meta_title, description, image } = contact.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} />

  <section class="section">
    <div class="container">
      <div class="mx-auto lg:col-10">
        <form
          class="border border-border dark:border-darkmode-border rounded-md p-10"
          action={contact_form_action}
          method="POST"
        >
          <div class="mb-6 md:grid grid-cols-2 gap-x-8 max-md:space-y-6">
            <div>
              <label for="name" class="form-label">
                お名前（ペンネーム等も可） <span class="text-red-500">*</span>
              </label>
              <input
                id="name"
                name="name"
                class="form-input"
                placeholder="お名前"
                type="text"
                required
              />
            </div>

            <div>
              <label for="email" class="form-label">
                メールアドレス <span class="text-red-500">*</span>
              </label>
              <input
                id="email"
                name="email"
                class="form-input"
                placeholder="example@email.com"
                type="email"
                required
              />
            </div>
          </div>

          <div class="mb-6">
            <label for="message" class="form-label">
              お問い合わせ内容 <span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              class="form-input"
              placeholder="お問い合わせ内容をご記入ください"
              rows={8}
              required></textarea>
          </div>

          <div class="flex justify-end">
            <button type="submit" class="btn btn-primary">
              送信する
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Base>
